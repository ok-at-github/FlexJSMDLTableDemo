<mdl:Grid xmlns:fx="http://ns.adobe.com/mxml/2009"
          xmlns:js="library://ns.apache.org/flexjs/basic"
          xmlns:mdl="library://ns.apache.org/flexjs/mdl">
    <fx:Script>
        <![CDATA[
		import org.apache.flex.collections.ArrayList;
		import vo.UserVO;

		[Bindable]
			public var _users:ArrayList;

			private function onInitComplete():void {

				_users = new ArrayList();
				_users.addItem( new UserVO("lstooge","Larry", "Stooge", "larry@stooges.com" ) );
				_users.addItem( new UserVO("cstooge","Curly", "Stooge", "curly@stooges.com" ) );
				_users.addItem( new UserVO("mstooge","Moe", "Stooge", "moe@stooges.com" ) );
				tblUsers.dataProvider = _users;
			}
        ]]>
    </fx:Script>

	<mdl:beads>
		<js:ContainerDataBinding/>
	</mdl:beads>

	<mdl:GridCell column="12">
		<mdl:Table id="tblUsers" shadow="2" selectable="true"
				   dataProvider="{_users}">
			<mdl:columns>
				<mdl:TableColumn headerText="Username" />
				<mdl:TableColumn headerText="First Name"/>
				<mdl:TableColumn headerText="Last Name"/>
				<mdl:TableColumn headerText="Email"/>
			</mdl:columns>
			<mdl:beads>
				<js:DataItemRendererFactoryForArrayList />
			</mdl:beads>
		</mdl:Table>
	</mdl:GridCell>
</mdl:Grid>